# Application Configuration
APP_NAME="AVATAR Tsunami Prediction API"
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://tsunami_user:your_password@localhost:5432/tsunami_db

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Model Configuration
MODEL_PATH=trained_models/ssl_vit_cnn.onnx
USE_GPU=False

# External APIs
BMKG_API_URL=https://data.bmkg.go.id/DataMKG/TEWS/
USGS_API_URL=https://earthquake.usgs.gov/fdsnws/event/1/query

# Real-Time Monitoring
ENABLE_REALTIME_MONITORING=True
POLL_INTERVAL=60

# Cache
CACHE_ENABLED=True
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
